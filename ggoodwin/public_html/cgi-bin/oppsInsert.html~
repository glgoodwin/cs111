      <tr><td><label for="orgid" accesskey="n">(n) Org id (optional):</label></td><td><input type="text" name="orgid" id="orgid"></td></tr>
      <tr><td><label for="indvid" accesskey="b">(b) Individual id (optional):</label></td><td><input type="text" name="individ" id="individ"></td></tr>
      <tr><td><label for="title" accesskey="b">(b) Opportunity title:</label></td><td><input type="text" name="title" id="title"></td></tr>
      <tr><td><label for="oppdesc" accesskey="b">(b) Description of opportunity:</label></td><td><textarea name="oppdesc" id="oppdesc" rows="5" cols="50"></textarea></td></tr>
      <tr><td><label for="dateadd" accesskey="b">(b) Today's date (YYYY-MM-DD):</label></td><td><input type="text" name="dateadd" id="dateadd"></td></tr>
    </table>
  </fieldset>    

