public class WaffleBuggle extends Sprite{//draws a buggle with a mustache that comes in from the side of the screen
  //instance methods
  private Color c1;// buggles Color
  private int size;//size of one of the buggles sides
  private int initx;//initial top point of buggle
  private int y;
  private int x;
  
  public WaffleBuggle(Color c_1, int howBig,int x1; int xx, int yy){
    c1 = c_1;
    size = howBig;
    x = xx;
    y = yy;
    initx = x1;
  }
  
  drawState(Grapics g){
    Polygon javier = new Polygon();
    javier.addpoint(x,y);
    javier.addpoint(x+size,y+size/2);
    javier.(x,y+size);
  }
  
  updateState(){
    x = x+5;
  }
  
  resetState(){
    x = initx;
  }
  
}
  
  