import java.awt.*;// Use Graphics

public class BuggleGrid extends Sprite{//draws a buggle world grid
  //instance variables
  private int x;
  private int y;
  private int width;
  private int height;
  
  public BuggleGrid(int xx, int yy, int wid, int hei){
    x = xx;
    y = yy;
    width = wid;
    height = hei;
  }
  
  public void drawState(Graphics g){
    g.setColor(Color.black);
    g.drawLine(x,y,x+width,y);
    g.drawLine(x,y+(height/4),x+width,y+(height/4));
    g.drawLine(x,y+(height/2),x+width,y++(height/2));
    g.drawLine(x,y+(3*(height/3)),x+width,y+(3*(height/3)));
    g.drawLine(x,y+height,x+width,y+height);
    g.drawLine(x,y,x,y+height);
    g.drawLine(x+width,y,x+width,y+height);
    
  }
  
  public void resetState(){
    ;
  }
  
  public void updateState(){
    ;
  }
  
  
